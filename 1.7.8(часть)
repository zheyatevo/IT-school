import java.util.Scanner;
public class Main {
    public static void main(String[] argv) {
        Scanner in = new Scanner(System.in);
        int a = in.nextInt();
        int n = in.nextInt();
        int res; int k=a;
        if ((n!=0)&&(n % 2 == 0)) {
            for (int i = 1; i < (n / 2); i++) {
                a= a * k; }
            res = a*a;
            System.out.print(res);
        } else {
            if(n==1){res = a; System.out.print(res);}
            if(n==0){res = 1; System.out.print(res);}
            if(n>1){
                for(int i=1;i<(n-1);i++){
                    a=  a* k;}
                res = a*k; System.out.print(res);}
        }
    }
}


