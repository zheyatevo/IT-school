import java.util.Scanner;
public class Main {
    public static void main(String[] args) {

        Scanner in = new Scanner(System.in);
        int n = in.nextInt();
        int []a = new int [n];
        int sum =0; int f =0; int y =0;
        for(int i=0;i<n;i++){
            a[i]= in.nextInt();}
        for(int i=0;i<n-1;i++){

            if (a[i]<a[i+1]){ sum =sum+1;} }
        if (a[n-1] > a[n-2]) {sum =sum+1;  }
        if(sum==0) {sum=1;}
System.out.print(sum);
        }
    }
